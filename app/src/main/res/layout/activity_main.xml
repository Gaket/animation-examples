<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/btn_transition_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transition Manager" />

    <Button
        android:id="@+id/btn_delayed_transition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delayed Transition" />

    <Button
        android:id="@+id/btn_motion_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motion Layout" />

    <Button
        android:id="@+id/btn_lottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lottie" />

</LinearLayout>